{
  "mcs": {
    "message_in_port": 5050,
    "message_out_port": 5051
  },
  
  /* Remote destination bandwidth limit in MB/s, 0 disables limiting */
  "bw_limit": 0.0,
  
  /* Maximum number of times to retry a copy for giving up */
  "max_retry": 7,
  
  /* Time in hours to wait between copy retries */
  "wait_retry": 24,
  
  /* Data size in TB to accumulate before deleting the source files */
  "purge_size": 1.0,
  
  /* Email for error notification */
  "email": {
    "username": "!LWA_AUTH USERNAME email",
    "password": "!LWA_AUTH PASSWORD email",
    "smtp_server": "!LWA_AUTH URL email"
  }
}
